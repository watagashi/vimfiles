#!/bin/zsh

BG='&'
INTERVAL=0.1

while getopts st: OPT
do
	case $OPT in
		s)	BG=''
			;;
		t)	INTERVAL=${OPTARG}
			;;
	esac
done
shift $((OPTIND - 1))

find `dirname $0`/bundle -maxdepth 1 -type d \
	-exec sh -c '(test -d {}/.git && (git -C {} pull --verbose '${BG}')) || (test -d {}/.hg && (hg --cwd {} pull -u &)) && sleep '${INTERVAL} \;
sleep $(echo ${INTERVAL}'*50' | bc)
